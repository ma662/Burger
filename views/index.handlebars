<div class="container-fluid">

  <div class="row">
    <div class="col-12">

      <h1 class="text-center">Enjoy (or Vomit) Some Burgers!</h1>
      <h6 class="text-center">By Myles Alcala</h6>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h2 class="text-center">Burgers that are not devoured!</h2>

        <ul>
          {{#each burgers}}
            {{#unless devoured}}
              {{> burgers/burger-block eaten=true}}
            {{/unless}}
          {{/each}}
        </ul>

      </div>

      <div class="col-sm-6">

        <h2 class="text-center">Burgers that are devoured!</h2>

        <ul>
          {{#each burgers}}
            {{#if devoured}}
              {{> burgers/burger-block eaten=false}}
            {{/if}}
          {{/each}}
        </ul>

      </div>

    </div>

  </div>


  <div class="container">
    <div class="row">
      <div class="col-sm-12">

        <h2>Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="burg-text" name="burger_name">
          </div>

          <div class="form-group">
            <label for="sleepy">Eaten?</label><br>
            <input type="radio" name="devoured" value="1" checked> Eaten!<br>
            <input type="radio" name="devoured" value="0"> Awaiting Consumption
          </div>

          <button type="submit">Add Burger</button>
        </form>
      </div>
    </div>
  </div>

  <video width="1920" height="1080" autoplay>
    <source src="assets/vid/burger.mp4" type="video/mp4">
    Your browser does not support the video tag.
  </video>

</div>

